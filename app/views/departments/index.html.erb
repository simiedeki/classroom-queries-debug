<h1>
  List of all departments
</h1>

<hr>

<form action="/insert_department" method="post">
  <div>
    <label for="name_box">
      Name
    </label>
    <input type="text" id="name_box" name="query_name">
  </div>

  <button type="submit">
    Create department
  </button>
</form>

<hr>

<table class="table" border="1">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Actions</th>
  </tr>

  <% @departments.each do |department| %>
    <tr>
      <td>
        <%= department.id %>  <!-- Fixed: Use local variable 'department' -->
      </td>
      <td>
        <%= department.name %>  <!-- Fixed: Use local variable 'department' -->
      </td>
      <td>
        <a href="/departments/<%= department.id %>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>

<hr>
